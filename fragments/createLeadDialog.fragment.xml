<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Create Lead" id="lead_dialog">
        <content>
            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4"
				labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3"
				columnsL="2" columnsM="2" singleContainerFullSize="false" class="sapUiSizeCompact">
				<f:content>
					<core:Title text="Add Lead"/>
					<Label text="Lead ID"/>
					<Input id="ipcr_leadID" value="" placeholder="e.g. 100012"/>
					<Label text="Lead Name"/>
					<Input id="ipcr_leadName" value="" placeholder="e.g. John Doe"/>
					
					
				</f:content>
			</f:SimpleForm>
        </content>
        <buttons>
        		<Button text="Save" press="onSaveLeadCreate" />
        		<Button text="Clear" press="onClearLeadCreate" />
                <Button text="Close" press="onCloseLeadS" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>